/* pages/index/myrun/myrun.wxss */
@import "../run/run.wxss";

.foot {
  background-color: RGBA(74, 144, 226, 1);
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 120rpx;
  font-size: 36rpx;
  font-family: PingFang-SC-Medium;
  color: rgba(255, 255, 255, 1);
}

.receiptInfo {
  width: 686rpx;
  height: 241rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 5rpx;
  margin: 0 auto;
  margin-top: 33rpx;
  box-shadow: 0px 0px 2rpx RGBA(0, 0, 0, 0.08);
  box-sizing: border-box;
  padding: 45rpx 55rpx;
}

.receipt_title {
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  color: rgba(153, 153, 153, 1);
}

.wrap {
  margin-top: 26rpx;
}

.kong {
  width: 100%;
  height: 150rpx;
}

.receipt_Group {
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  margin-top: 30rpx;
}

.Group_logo {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  background-color: red;
}

.Group_name {
  width: 250rpx;
  height: 88rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  color: rgba(0, 0, 0, 1);
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 20rpx;
}

.Group_sure {
  width: 180rpx;
  height: 80rpx;
  background: rgba(152, 97, 225, 1);
  border-radius: 5rpx;
  margin-left: auto;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  color: rgba(255, 255, 255, 1);
}

.myfoot {
  width: 100%;
  height: 120rpx;
  background-color: rgba(255, 255, 255, 1);
  border-top: 3rpx solid RGBA(0, 0, 0, 0.08);
  position: fixed;
  bottom: 0;
  box-sizing: border-box;
  padding: 0rpx 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}