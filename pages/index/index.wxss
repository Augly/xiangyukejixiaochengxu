/**index.wxss**/
@import "../../template/template.wxss";

.nav {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 20rpx 33rpx;
  position: fixed;
  top: 0;
  z-index: 10;
  background-color: RGBA(255, 255, 255, 1);
}

.nav_bar {
  flex-grow: 1;
  height: 100%;
  box-sizing: border-box;
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  color: RGBA(102, 102, 102, 1);
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 3rpx solid RGBA(255, 255, 225, 1);
}

.nav_active {
  color:RGBA(152, 97, 225, 1);
  border-bottom: 3rpx solid RGBA(152, 97, 225, 1);
}

.mySwiper {
  width: 100%;
  height: 360rpx;
}

.mySwiper .slide-image {
  width: 100%;
  height: 100%;
}

.wrap {
  position: absolute;
  box-sizing: border-box;
  top: 100rpx;
  bottom: 0rpx; 
}

.select_Group {
  width: 100%;
  min-height: 88rpx;
  border-bottom: 5rpx solid RGBA(235, 235, 235, 1);
  box-sizing: border-box;
}
.select_head{
   width:auto; 
  height: 88rpx;
   display: flex; 
  align-items: center;
  border-bottom: 1rpx solid RGBA(235, 235, 235, 1);
  /* overflow-y:auto;  */
  flex-wrap: nowrap;
  overflow-x: scroll
}
.selectone_item {
  box-sizing: border-box;
  padding: 16rpx 22rpx;
  height: 56rpx;
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  color: rgba(153, 153, 153, 1);
  display: inline-block; 
  margin-left: 24rpx;
  border-radius: 28rpx;
  line-height: 24rpx;
}
.icon-xiangxia{
  font-size: 24rpx;
}
.select_more{
  display: flex;
  box-sizing: border-box;
  flex-wrap: wrap;
  padding-top:0rpx;
  padding-bottom: 15rpx;
  padding-left: 15rpx;
  padding-right: 35rpx;
}

.select_more_item{
  width: 120rpx;
  height: 66rpx;
  box-sizing: border-box;
  border: 1rpx solid RGBA(235, 235, 235, 1);
  margin-top: 16rpx;
  margin-left: 20rpx;

  font-size:24rpx;
  text-align: center;
  line-height: 66rpx;
font-family:PingFang-SC-Medium;
color:rgba(153,153,153,1);
}
.demandselect_head{
   width: 100%;
  height: 88rpx;
  display: flex;
  align-items: center;
  flex-grow: 1;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0rpx 30rpx;
  border-bottom: 1rpx solid RGBA(235, 235, 235, 1);
}

.demandselect_item{
  line-height: 60rpx;
  width: 190rpx;
  height: 60rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  color: rgba(153, 153, 153, 1);
  border-radius: 28rpx;
  text-align: center;
}
.demandselect_item_active{
  background-color:RGBA(152, 97, 225, 1); 
  color: RGBA(255, 255, 255, 1);
}

.selectone_itemActive{
  background-color: RGBA(152, 97, 225, 1);
  color:RGBA(255, 255, 225, 1);
}