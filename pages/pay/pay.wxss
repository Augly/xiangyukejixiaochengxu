/* pages/pay/pay.wxss */

page {
  background-color: RGBA(245, 246, 250, 1);
}

.wrap {
  width: 720rpx;
  height: auto;
  background-color: rgba(255, 255, 255, 1);
  border: 1rpx solid RGBA(220, 220, 220, 1);
  margin: 0 auto;
  margin-top: 36rpx;
}

.wrap_list {
  width: 100%;
  height:140rpx;
  box-sizing: border-box;
  padding: 0rpx 38rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.list_logo {
  width: 68rpx;
  height: 68rpx;
}

.list_center {
  width: 400rpx;
  height: 80rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.list_check {
  width: 44rpx;
  height: 44rpx;
  background-image: url('http://xiangyu.wx.bronet.cn/images/i04@2x.png');
  background-size: 100% 100%;
}

.list_checked {
  background-image: url('http://xiangyu.wx.bronet.cn/images/i03@2x.png');
}

.center_top {
  font-size: 30rpx;
  color: rgba(51, 51, 51, 1);
}

.center_other {
  font-size: 20rpx;
  color: rgba(136, 136, 136, 1);
}

.sumbit {
  width: 660rpx;
  height: 90rpx;
  background: rgba(74, 144, 226, 1);
  border-radius: 8rpx;
  text-align: center;
  line-height: 90rpx;
  font-size: 34rpx;
  color: rgba(255, 255, 255, 1);
  margin: 0 auto;
  margin-top: 64rpx;
}
