/* pages/personl/sendGift/sendGift.wxss */

.list {
  width: 100%;
  height: 218rpx;
  border-top: 1rpx solid RGBA(235, 235, 235, 1);
  box-sizing: border-box;
  padding: 0rpx 33rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.list_logo {
  width: 170rpx;
  height: 170rpx;
  border: 1rpx solid RGBA(235, 235, 235, 1);
  border-radius: 5rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  padding: 8rpx;
  position: relative;
}

.list_main {
  width: 480rpx;
  height: 170rpx;
  display: flex;
  justify-content: space-between;
}

.main_left {
  width: 380rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.main_left_title {
  font-size: 36rpx;
  color: rgba(0, 0, 0, 1);
}

.main_left_carGroup {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.jian, .jia {
  width: 60rpx;
  height: 60rpx;
  background: rgba(245, 245, 245, 1);
  border-radius: 3rpx;
  border: 1rpx solid RGBA(235, 235, 235, 1);
  font-size: 50rpx;
  text-align: center;
  line-height: 60rpx;
}

.num {
  width: 100rpx;
  height: 60rpx;
  text-align: center;
  font-size: 36rpx;
  line-height: 60rpx;
}

.main_right {
  font-size: 24rpx;
  color: rgba(255, 0, 0, 1);
}

.gift_logo {
  width: 140rpx;
  height: 140rpx;
}

.gift_num {
  font-size: 24rpx;
  color: rgba(255, 0, 0, 1);
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
}

.content{
  padding-bottom: 100rpx;
}

.sureSend{
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background-color: RGBA(74, 144, 226, 1);
  text-align: center;
  line-height: 100rpx;
  font-size:36rpx;
  color:rgba(255,255,255,1);
}