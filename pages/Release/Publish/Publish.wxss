/* pages/Release/Publish/Publish.wxss */

.textartcle {
  width: 100%;
  height: 378rpx;
  display: block;
  box-sizing: border-box;
  padding: 30rpx;
  font-size: 28rpx;
  border-top: 1rpx solid RGBA(230, 231, 235, 1);
  border-bottom: 1rpx solid RGBA(230, 231, 235, 1);
  font-family: PingFang-SC-Medium;
}

.addtype {
  width: 100%;
  height: 140rpx;
  box-sizing: border-box;
  padding: 30rpx;
  display: flex;
  align-items: center;
}

.type_item {
  width: 80rpx;
  height: 80rpx;
  box-sizing: border-box;
  border: 2rpx solid RGBA(204, 204, 204, 1);
  border-radius: 50%;
  margin-right: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.type_item .iconfont {
  font-size: 40rpx;
  color: RGBA(153, 153, 153, 1);
}

.foot {
  width: 100%;
  height: 100rpx;
  background: rgba(74, 144, 226, 1);
  position: fixed;
  bottom: 0;
  text-align: center;
  line-height: 100rpx;
  font-size: 32rpx;
  font-family: PingFang-SC-Medium;
  color: rgba(255, 255, 255, 1);
}

.adder, .allow {
  width: 686rpx;
  height: 77rpx;
  background-color: RGBA(245, 245, 245, 1);
  font-size: 30rpx;
  font-family: PingFang-SC-Medium;
  color: rgba(153, 153, 153, 1);
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 0rpx 24rpx;
}

.adder {
  position: absolute;
  left: 50%;
  margin-left: -343rpx;
  bottom: 204rpx;
}
.adder .iconfont{
  font-size: 30rpx;
  color: RGBA(74, 144, 226, 1);
  margin-right: 25rpx;
}
.allow .iconfont{
  font-size: 25rpx;
  color: RGBA(74, 144, 226, 1);
   margin-right: 25rpx;
}

.allow {
  position: absolute;
  left: 50%;
  margin-left: -343rpx;
  bottom: 119rpx;
}
