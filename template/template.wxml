<!--瀑布流模板  -->
<template name="item">
  <view class="item" bindtap='lookres'>
    <view class='showImg'>
      <image class="item_img" src="{{thumb}}" mode="widthFix"></image>
      <image class='item_act' wx:if="{{authur_type=='type_one'}}" src="{{authur_act}}"></image>
      <view class='item_txt'>{{title}}</view>
    </view>
    <view class='showText'>
      <view class='anthur_Group'>
        <image class='show_anthur' src="{{authur_imgurl}}"></image>
        <view class='anthur_Info'>
          <view class='anthurInfo_name'>
            <view class='name'>{{authur_name}}</view>
            <text class='iconfont icon-nv' wx:if="{{authur_sex==1}}"></text>
            <text class='iconfont icon-nan' wx:else></text>
          </view>
          <view class='anthur_Data'>
            {{create_time}}
          </view>
        </view>
        <text class='iconfont icon-xihuan' catchtap='love'></text>
      </view>
      <view class='adder_Group'>
        <text class='iconfont icon-dizhi'></text>
        <view class='adder_res'>天津 · 建国楼</view>
        <view class='distance'>距离{{distance}}km</view>
      </view>
    </view>
  </view>
</template>
